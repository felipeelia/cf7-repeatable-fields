	"description": "Repeatable Fields Add-on for Contact Form 7",
	"license": "GPL-3.0+",
	"main": "Gruntfile.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/felipeelia/cf7-repeatable-fields"
	},
