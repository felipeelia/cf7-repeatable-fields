		"@babel/preset-env": "^7.8.7",
		"@wordpress/babel-preset-default": "^4.10.0",
		"@wordpress/eslint-plugin": "^3.4.1",
		"eslint": "^6.8.0",
		"grunt": "^1.5.2",
		"grunt-babel": "^8.0.0",
		"grunt-checktextdomain": "^1.0.1",
		"grunt-contrib-watch": "^1.1.0",
		"grunt-wp-i18n": "^1.0.3",
		"grunt-wp-readme-to-markdown": "^2.0.1",
		"husky": "^3.1.0",
		"lint-staged": "^9.5.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
